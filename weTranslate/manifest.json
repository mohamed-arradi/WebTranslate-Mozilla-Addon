{
    "manifest_version": 2,
    "version": "1.0.2",
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "icons": {
        "48": "/images/weTranslate48.png",
        "96": "/images/weTranslate96.png"
    },
    "browser_action": {
        "browser_style": false,
        "default_popup": "./data/html/popup_menu.html",
